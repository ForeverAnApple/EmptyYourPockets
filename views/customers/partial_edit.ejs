<div class=row>
    <div class="col col-xs-12">
      <div class="form-group">
        <label for="name">Customer Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= customer.name %>">
      </div>
      <div class="form-group">
        <label for="premium">Premium Status</label>
        <select name="premium" class="form-control" id="premium">
        <% if(customer.premium){ %>
	    <option value="1" selected>True</option>
	    <option value="0">False</option>
	    <% } else{ %>
	    <option value="1">True</option>
	    <option value="0" selected>False</option>
	    <% } %>
	    </select>
      </div>
      <div class="form-group">
        <label for="wallet">Wallet Amount</label>
        <input type="float" class="form-control" id="wallet" name="wallet" value="<%= customer.wallet %>">
      </div>
    </div>
  </div>
  <hr>
  